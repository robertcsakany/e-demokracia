<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- To define project definition create 'frontend-react/actor/pom.xml.project-definition.fragment.override.hbs' file -->
    <parent>
        <groupId>party.mkkp.edemokracia</groupId>
        <artifactId>edemokracia-application-frontend-react</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>edemokracia-application-frontend-react-edemokracia__admin__admin</artifactId>
    <name>edemokracia - Admin frontend react</name>
    <description>edemokracia - Admin react frontend</description>
    <!-- End of 'frontend-react/actor/pom.xml.project-definition.fragment.override.hbs' -->

    <packaging>bundle</packaging>

    <properties>
        <!-- To redefine project definition create 'frontend-react/actor/pom.xml.properties-definition.fragment.override.hbs' file -->
        <model-name>edemokracia</model-name>
        <actor>edemokracia__admin__admin</actor>
        <actor-shortname>admin</actor-shortname>
        <actor-name>Admin</actor-name>
        <actor-fq-name>edemokracia::admin::Admin</actor-fq-name>
        
        <override-dir>${project.parent.basedir}/generator-overrides</override-dir>
        
        
        <tablePageLimit>10</tablePageLimit>
        <appVersion>1.0.0</appVersion>
        
        
        <!-- End of 'frontend-react/actor/pom.xml.properties-definition.fragment.override.hbs' -->
        <ui-model>${project.parent.basedir}/model/${model-name}-ui.model</ui-model>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>5.1.8</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Web-ContextPath>/${model-name}/${actor}</Web-ContextPath>
                        <Include-Resource>
                            /=${project.basedir}/dist
                        </Include-Resource>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>generate-frontend-react</id>
            <activation>
                <property>
                    <name>!skipGenerateFrontendReact</name>
                </property>
            </activation>
            <build>
                <plugins>

                    <plugin>
                        <groupId>hu.blackbelt.judo.meta</groupId>
                        <artifactId>judo-ui-generator-maven-plugin</artifactId>
                        <version>${judo-meta-ui-version}</version>
                        <executions>
                            <execution>
                                <id>execute-ui-generation</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <configuration>
                                    <uris>
                                        <uri>mvn:hu.blackbelt.judo.generator:judo-ui-react:${judo-ui-react-template-version}</uri>
                                        <uri>${override-dir}/ui-react</uri>
                                    </uris>
                                    <type>ui-react</type>
                                    <applications>
                                        ${actor-fq-name}
                                    </applications>
                                    <ui>${ui-model}</ui>
                                    <destination>${basedir}</destination>
                                    <templateParameters>
                                        <uiMetaVersion>${judo-meta-ui-version}</uiMetaVersion>
                                        <nodeInstallDir>${node-install-dir}</nodeInstallDir>

                                        <appModelName>${model-name}</appModelName>
                                        <appScope>${appScope}</appScope>
                                        <appVersion>${appVersion}</appVersion>
                                        <nodeVersion>${node-version}</nodeVersion>
                                        
                                        <tablePageLimit>${tablePageLimit}</tablePageLimit>
                                        <defaultLanguage>hu-HU</defaultLanguage>
                                    </templateParameters>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>hu.blackbelt.judo.generator</groupId>
                                <artifactId>judo-ui-react</artifactId>
                                <version>${judo-ui-react-template-version}</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>generate-services</id>
            <activation>
                <property>
                    <name>!skipGenerateServices</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>hu.blackbelt.judo.meta</groupId>
                        <artifactId>judo-ui-generator-maven-plugin</artifactId>
                        <version>${judo-meta-ui-version}</version>
                        <executions>
                            <execution>
                                <id>execute-ui-services-generation</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <configuration>
                                    <uris>
                                        <uri>mvn:hu.blackbelt.judo.generator:judo-ui-typescript-rest-api:${judo-ui-typescript-rest-template-version}</uri>
                                        <uri>mvn:hu.blackbelt.judo.generator:judo-ui-typescript-rest-service:${judo-ui-typescript-rest-template-version}</uri>
                                        <uri>mvn:hu.blackbelt.judo.generator:judo-ui-typescript-rest-axios:${judo-ui-typescript-rest-template-version}</uri>
                                        <uri>${override-dir}/ui-typescript</uri>
                                    </uris>
                                    <type>ui-typescript-rest</type>
                                    <applications>
                                        ${actor-fq-name}
                                    </applications>
                                    <ui>${ui-model}</ui>
                                    <destination>${basedir}/src/generated</destination>
                                </configuration>
                            </execution>

                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>hu.blackbelt.judo.generator</groupId>
                                <artifactId>judo-ui-typescript-rest-commons</artifactId>
                                <version>${judo-ui-typescript-rest-template-version}</version>
                            </dependency>
                            <dependency>
                                <groupId>hu.blackbelt.judo.generator</groupId>
                                <artifactId>judo-ui-typescript-rest-api</artifactId>
                                <version>${judo-ui-typescript-rest-template-version}</version>
                            </dependency>
                            <dependency>
                                <groupId>hu.blackbelt.judo.generator</groupId>
                                <artifactId>judo-ui-typescript-rest-service</artifactId>
                                <version>${judo-ui-typescript-rest-template-version}</version>
                            </dependency>
                            <dependency>
                                <groupId>hu.blackbelt.judo.generator</groupId>
                                <artifactId>judo-ui-typescript-rest-axios</artifactId>
                                <version>${judo-ui-typescript-rest-template-version}</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>build-frontend</id>
            <activation>
                <property>
                    <name>!quick</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.github.eirslett</groupId>
                        <artifactId>frontend-maven-plugin</artifactId>
                        <version>${frontend-maven-plugin-version}</version>
                        <executions>
                            <execution>
                                <id>pnpm install</id>
                                <goals>
                                    <goal>pnpm</goal>
                                </goals>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <arguments>install</arguments>
                                </configuration>
                            </execution>

                            <execution>
                                <id>format code</id>
                                <goals>
                                    <goal>pnpm</goal>
                                </goals>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <arguments>run format</arguments>
                                </configuration>
                            </execution>

                            <execution>
                                <id>build</id>
                                <goals>
                                    <goal>pnpm</goal>
                                </goals>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <arguments>run build:ci</arguments>
                                </configuration>
                            </execution>
                        </executions>
                        <configuration>
                            <installDirectory>${node-install-dir}</installDirectory>
                            <workingDirectory>${basedir}</workingDirectory>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>build-frontend-quick</id>
            <activation>
                <property>
                    <name>quick</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.github.eirslett</groupId>
                        <artifactId>frontend-maven-plugin</artifactId>
                        <version>${frontend-maven-plugin-version}</version>
                        <executions>
                            <execution>
                                <id>build</id>
                                <goals>
                                    <goal>pnpm</goal>
                                </goals>
                                <phase>compile</phase>
                                <configuration>
                                    <arguments>run build</arguments>
                                </configuration>
                            </execution>
                        </executions>
                        <configuration>
                            <installDirectory>${node-install-dir}</installDirectory>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>replace-base-href</id>
            <activation>
                <property>
                    <name>!local</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.google.code.maven-replacer-plugin</groupId>
                        <artifactId>replacer</artifactId>
                        <version>1.5.2</version>
                        <executions>
                            <execution>
                                <id>frontend-index-url-replace</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <basedir>${project.basedir}/dist</basedir>
                                    <includes>
                                        <include>index.html</include>
                                    </includes>
                                    <replacements>
                                        <replacement>
                                            <token><![CDATA[<base href="/">]]></token>
                                            <value><![CDATA[<base href="/${model-name}/${actor}/">]]></value>
                                        </replacement>
                                    </replacements>
                                    <regex>false</regex>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
